{
    "name": "cooper/daily-sentence-sdk",
    "description": "Daily Sentence PHP SDK for ICiBa",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "cooper",
            "email": "myxiaoao@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "sammyjo20/saloon": "2.0.0-beta7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "pestphp/pest": "^1.22",
        "symfony/var-dumper": "^6.2"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Cooper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cooper\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ],
        "test": [
            "./vendor/bin/pest"
        ]
    }
}
